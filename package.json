{
  "name": "git-ai-commit-agent",
  "version": "2.0.4",
  "description": "CLI tool for generating Git commit messages using AI (OpenAI, AWS Bedrock, Groq, etc)",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "bin": {
    "git-ai-commit-agent": "./dist/index.js"
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "main": "./dist/index.js",
  "scripts": {
